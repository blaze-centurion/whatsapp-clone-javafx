            <VBox fx:id="chatBox" prefWidth="1102.0" spacing="5.0">
               <padding>
                  <Insets bottom="5.0" left="30.0" top="30.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
