                              <FontAwesomeIcon fill="#d0d0d0" glyphName="PAPER_PLANE" selectionFill="#ff0d0d" size="22px" />
                           </graphic>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </JFXButton>
